<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1, minimal-ui, shrink-to-fit=no">

<title>{{ not fn('is_front_page') ? fn('wp_title', '|', true, 'right') }}{{ site.name }}</title>

<meta content="{{options.share_subtitle}}" name="description">

<!-- Open Graph -->
<meta content="{{options.share_title}}" name="og:title">
<meta content="{{options.share_subtitle}}" name="og:description">
<meta content="{{site.link}}" name="og:url">
<meta content="{{options.share_title}}" name="og:site_name">
<meta content="{{TimberImage(options.fb_share_image).src}}" name="og:image">

<!-- Twitter -->
<meta content="{{options.share_title}}" name="twitter:title">
<meta content="{{options.share_subtitle}}" name="twitter:description">
<meta content="{{TimberImage(options.twitter_share_image).src}}" name="twitter:image">
<meta content="summary_large_image" name="twitter:card">
<link href="{{site.link}}" rel="canonical">

